@model Nikunj_Interview_Cisive.Models.Car_Base
 
    @{
        ViewBag.Title = "CarDeRegistration";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Car De-Registration</h2>

    @using (Html.BeginForm("CarDeRegistration", "CarRental", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.CarNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CarNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CarNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Return" class="btn btn-default" />
                </div>
            </div>
        </div>
        if (ViewBag.Result != null)
        {
            <span>Result : @ViewBag.Result</span>
        }

    }